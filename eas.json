{
  "cli": {
    "version": ">= 16.17.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
         "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://juanlms-webapp-server.onrender.com"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://juanlms-webapp-server.onrender.com"
      }
    },
    "production": {
      "android": {
         "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://juanlms-webapp-server.onrender.com"
      }
    }
  },
  "submit": {
    "production": {}
  }
} 