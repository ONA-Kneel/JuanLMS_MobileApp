{
  "expo": {
    "name": "JuanLMS",
    "slug": "juanlms-mobile-app",
    "owner": "nochu",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/SanJuan.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/JuanLMS-LogoV1.png",
      "resizeMode": "contain",
      "backgroundColor": "#03045E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kneelpngnbn.juanlms.mobileapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/SanJuan.png",
        "backgroundColor": "#03045E"
      },
      "package": "com.kneelpngnbn.juanlms.mobileapp",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.SYSTEM_ALERT_WINDOW"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "allowBackup": true,
      "usesCleartextTraffic": true,
      "buildConfigFields": {
        "androidx.core:core": "1.13.1",
        "androidx.media:media": "1.0.0"
      }
    },
    "web": {
      "icon": "./assets/SanJuan.png"
    },
    "extra": {
      "API_URL": "https://juanlms-webapp-server.onrender.com",
      "eas": {
        "projectId": "3b86af3d-d086-405f-bf67-ba9106032463"
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
          "cameraPermission": "The app accesses your camera to let you take profile pictures."
        }
      ],
      [
        "@react-native-community/datetimepicker",
        {
          "androidMode": "default"
        }
      ],
      "@react-native-firebase/app"
    ]
  }
}
